<idea-plugin>
    <id>com.nowsprinting.mcp-extension-unity</id>
    <name>MCP Server Extension for Unity</name>
    <vendor url="https://github.com/nowsprinting">Koji Hasegawa</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.mcpServer</depends>
    <depends>com.intellij.resharper.unity</depends>

    <extensions defaultExtensionNs="com.intellij.mcpServer">
        <mcpToolset implementation="com.nowsprinting.mcp_extension_unity.CompilationResultToolset"/>
        <mcpToolset implementation="com.nowsprinting.mcp_extension_unity.RunUnityTestsToolset"/>
        <mcpToolset implementation="com.nowsprinting.mcp_extension_unity.RunMethodInUnityToolset"/>
        <mcpToolset implementation="com.nowsprinting.mcp_extension_unity.PlayControlToolset"/>
    </extensions>
</idea-plugin>
